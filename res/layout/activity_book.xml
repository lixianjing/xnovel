<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_rl_main"
    android:background="@drawable/theme_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.xian.xnovel.widget.PageView
        android:id="@+id/book_pageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/book_tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/book_tv_center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/book_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical" />
    </RelativeLayout>

</RelativeLayout>