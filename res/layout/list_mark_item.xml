<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_mark_selector" >

    <ImageView
        android:id="@+id/list_mark_iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip" />

    <LinearLayout
              android:layout_toLeftOf="@+id/list_mark_iv_btm"
        android:layout_toRightOf="@+id/list_mark_iv_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/list_mark_rl_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/list_mark_tv_position"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/mark_tv_percent_se"
                android:textSize="20.0sp" />

            <TextView
                android:id="@+id/list_mark_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:textColor="@color/cata_text_se"
                android:textSize="14.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_mark_ll_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/list_mark_tv_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/cata_text_se"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/list_mark_tv_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/cata_text_se"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/list_mark_tv_title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/cata_text_se"
                android:textSize="16.0sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/list_mark_iv_btm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:src="@drawable/arrow_right_se" />

</RelativeLayout>