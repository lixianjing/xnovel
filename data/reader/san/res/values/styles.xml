    <style name="Theme.Main" parent="@*android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/book_loading</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity.Main</item>
    </style>
    <style name="Theme.Main.Splash" parent="@style/Theme.Main">
        <item name="android:windowBackground">@drawable/book_loading</item>
    </style>
